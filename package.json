{
    "name": "sharp-timer",
    "version": "0.1.4",
    "author": "afractal",
    "description": "Simple timers utility library with api (mostly) inspired  by .NET equivalents",
    "main": "./dist/src/index.js",
    "types": "./dist/src/index",
    "license": "MIT",
    "homepage": "https://github.com/afractal/SharpTimer#readme",
    "scripts": {
        "start": "tsc -w",
        "build": "tsc",
        "build:ci": "tsc --noEmit --rootDir ./src",
        "build:w": "tsc -w",
        "test": "concurrently \" tsc -w \" \" mocha --recursive ./dist/test --watch \" ",
        "testonce": " \" mocha --recursive ./dist/test \"",
        "cover": "istanbul cover ./node_modules/mocha/bin/_mocha --report lcovonly -- -R spec ./dist/test/*"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/afractal/SharpTimer.git"
    },
    "bugs": {
        "url": "https://github.com/afractal/SharpTimer/issues"
    },
    "keywords": [
        "sharp-timer",
        "sharp",
        "timer",
        "timers"
    ],
    "dependencies": {},
    "devDependencies": {
        "@types/chai": "^4.0.3",
        "@types/mocha": "^2.2.41",
        "@types/node": "^8.0.24",
        "chai": "^4.1.1",
        "codeclimate-test-reporter": "^0.5.0",
        "concurrently": "^3.5.0",
        "coveralls": "^2.13.1",
        "istanbul": "^0.4.5",
        "mocha": "^3.5.0",
        "mocha-lcov-reporter": "^1.3.0",
        "typescript": "^2.4.2"
    }
}
